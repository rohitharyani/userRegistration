<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.ecarus.userregistration.UserRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register with Ecarus"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:typeface="sans"
            android:textStyle="italic|bold"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearLayout2"
            android:layout_margin="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <ImageButton
                    android:layout_width="85dip"
                    android:layout_height="80dip"
                    android:src="@drawable/add_profile_photo"
                    android:background="@drawable/circle_best_seller"
                    android:id="@+id/registerProfilePhoto"/>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_list_product"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:src="@drawable/register_name"/>

            <EditText
                android:hint="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="sans"
                android:id="@+id/registerName"
                android:layout_marginRight="15dp"
                android:padding="12dp"
                android:ems="10"
                android:inputType="textCapWords|textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_list_product"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:src="@drawable/register_email"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/registerEmail"
                android:layout_marginRight="15dp"
                android:padding="12dp"
                android:hint="Email id"
                android:typeface="sans"
                android:inputType="textEmailAddress"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_list_product"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:src="@drawable/login_phone"/>

            <EditText
                android:hint="Phone number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/registerPhone"
                android:layout_marginRight="15dp"
                android:padding="12dp"
                android:typeface="sans"
                android:inputType="phone"
                android:ems="10"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_list_product"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/login_password"/>


                <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/registerPassword"
                android:layout_marginRight="15dp"
                android:typeface="sans"
                android:padding="12dp"
                android:hint="Password"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_list_product"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:src="@drawable/register_password"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/registerPassword2"
                android:layout_marginRight="15dp"
                android:typeface="sans"
                android:padding="12dp"
                android:hint="Re-type password"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray" />
        </LinearLayout>

            </LinearLayout>

        <Button
            android:text="Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registerButton"
            android:padding="10dp"
            android:textSize="18sp"
            android:typeface="sans"
            android:background="@drawable/rectangle1"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:layout_margin="15dp" />

    </LinearLayout>
</ScrollView>
